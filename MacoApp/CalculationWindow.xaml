<Window WindowStartupLocation="CenterScreen" x:Class="MacoApp.CalculationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
        xmlns:local="clr-namespace:MacoApp" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Title="Расчет фурнитуры" Height="515" Width="820" FontSize="10">

    <Window.Resources>
        <Style x:Key="alternatingStyle" TargetType="ListViewItem">
            <Style.Setters>
                <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                    <Setter Property="Background" Value="#FFD9F1F9" />
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex"  Value="1">
                    <Setter Property="Background" Value="#FFF7F5EB" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFF3D49A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="GVHeaderRightAlignedStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <DataGrid x:Name="GridList"  Grid.Column="1" Margin="0,0,15,0" Grid.Row="1" 
                    Grid.RowSpan="15" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"
                    FontSize="11">
        </DataGrid>


        <StackPanel x:Name="stackPanel" Orientation="Vertical" Grid.Row="1" Grid.RowSpan="2">
            <RadioButton x:Name="P" GroupName="Kompl" Content="Поворотная" Checked="RadioButton_Checked" Width="85" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <RadioButton x:Name="PO" GroupName="Kompl" Content="Поворот/откид." IsChecked="True" FontSize="11" Checked="RadioButton_Checked" Width="102" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Margin="10,0,0,0"/>
        </StackPanel>
        <TextBlock Text="Шифр"  Grid.Column="0" Grid.Row="0" Width="70" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox Name="Code" Grid.Column="0" Grid.Row="0" Width="80" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"/>

        <TextBox Name="TextBoxFFB" Text="450"  PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" Width="60"  FontSize="12" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"/>
        <TextBox Name="TextBoxFFH" Text="1300"  PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Row="5" Width="60" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"/>
        <ComboBox Name="ComboBoxSystem" Grid.Column="0" Grid.Row="6" Width="60" Height="24" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0">
            <ComboBoxItem>9</ComboBoxItem>
            <ComboBoxItem IsSelected="True">13</ComboBoxItem>
            <ComboBoxItem>Дерево</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="ComboBoxSide" Grid.Column="0" Grid.Row="7" Width="75" FontSize="12" Height="26" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0">
            <ComboBoxItem>Левая</ComboBoxItem>
            <ComboBoxItem IsSelected="True">Правая</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="ComboBoxLL" Grid.Column="0" Grid.Row="8" Width="60" Height="24" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0">
            <ComboBoxItem>Да</ComboBoxItem>
            <ComboBoxItem IsSelected="True">Нет</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="ComboBoxMv" Grid.Column="0" Grid.Row="9" Width="60" FontSize="12" Height="25" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,15,0" >
            <ComboBoxItem>Да</ComboBoxItem>
            <ComboBoxItem IsSelected="True">Нет</ComboBoxItem>
        </ComboBox>
        <TextBox Name="TextBoxColvo" Text="1" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" Grid.Row="12" Width="60" HorizontalAlignment="Right" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>

        <Button Name="ButtonCalc" Content="Рассчитать" Grid.Row="13" Height="22" HorizontalContentAlignment="Center" 
                    VerticalAlignment="Top" Margin="15,0,15,0" Click="ButtonCalc_Click" FontSize="11" Cursor="Hand" 
                    ToolTip="Нажми, чтобы рассчитать комплект"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                    Style="{StaticResource MaterialDesignRaisedLightButton}"/>
        <Button Name="SaveCalc" Content="Сохранить расчет" Grid.Row="14" Margin="15,0,15,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch"
                    VerticalAlignment="Top" Click="SaveCalc_Click" Height="21" FontSize="10" 
                    ToolTip="Нажми, чтобы добавить расчет к списку на сохранение"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                    Style="{StaticResource MaterialDesignRaisedLightButton}" FontWeight="Bold"/>

        <TextBlock Text="Высота"  Grid.Column="0" Grid.Row="5" Width="70" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Text="Ширина"  Grid.Column="0" Width="70" FontSize="12" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Text="Система"  Grid.Column="0" Grid.Row="6" Width="70" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Text="Сторона"  Grid.Column="0" Grid.Row="7" Width="70" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Text="Нижняя петля"  Grid.Column="0" Grid.Row="8" Width="110" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Text="Микровентиляция"  Grid.Column="0" Grid.Row="9" Width="110" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBlock Text="Колич. комплектов"  Grid.Column="0" Grid.Row="12" Width="110" HorizontalAlignment="Left" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>

        <ListBox Name="LBListCalc"  Grid.ColumnSpan="2" Grid.Row="16" Width="384" FontSize="10" Background="#FFEFF9F8" 
                 BorderThickness="1,1,1,1" BorderBrush="#FFFFECEC" VerticalAlignment="Bottom" Height="59" HorizontalAlignment="Left" Margin="10,0,0,15" >
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <ListBox Name="LBList"   Grid.Column="1" Margin="143,112,72,40" Grid.Row="1" Visibility="Hidden"/>
        <Button Name="ButtonSaveTxt" Content="Сохранить в .txt" Grid.Column="1" Grid.Row="16" 
                Click="Button_Click" FontSize="10" ToolTip="Нажми, чтобы сохранить расчеты в файл. Найти его можно в папке C:\FURNTBM\"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                Style="{StaticResource MaterialDesignRaisedLightButton}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="119,0,0,15"/>
        <Button x:Name="ButtonExit" Content="Назад" Click="ButtonExit_Click" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="12"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                Style="{StaticResource MaterialDesignRaisedLightButton}" Grid.Column="2" Grid.Row="16" Height="29" Margin="0,0,15,15"/>
        <TextBlock x:Name="TBDate" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,15,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="12"/>
        <TextBlock Text="Фурнитура"  Grid.Column="0" Width="70" FontSize="12" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <ComboBox x:Name="ComboBoxFurn" Grid.Column="0" Grid.Row="3" Width="80" FontSize="12" HorizontalAlignment="Right" Margin="0,0,15,0">
            <ComboBoxItem IsSelected="True" Content="Maco_Eco"/>
            <ComboBoxItem Content="Maco_MM"/>
            <ComboBoxItem Content="Vorne"/>
            <ComboBoxItem Content="Roto_NT"/>
            <ComboBoxItem Content="Internika"/>
        </ComboBox>

    </Grid>
</Window>
