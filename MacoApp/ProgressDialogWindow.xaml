<Window WindowStartupLocation="CenterScreen" x:Class="TBMFurn.ProgressDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBMFurn"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Progress" Height="80" Width="300">

    <Grid>
        <ProgressBar x:Name="progressBar" Height="20" Maximum="570" VerticalAlignment="Center" Margin="10" Background="#FFF4F5FF" BorderBrush="#FFF5F7FF" Foreground="#FF9FACFF"/>
        <TextBlock x:Name="progressText" TextAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
